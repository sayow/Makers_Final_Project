{{#> layout}}
    {{#*inline "content"}}

        <div class="wrapper-landpage">
            <div class="logo">
                <img src="/static/logo.png"/>
            </div>
            <div class="container">
                <h2 id="cardTitle">Most Popular</h2>
                <div id="likedAlbums">
                {{#each mostPopularAlbums}}
                    <div class="likedAlbumCard">
                    <img class="albumPhoto" src="{{imageUrl}}" alt="{{albumName}} album's cover image">
                    <p class="albumName"> {{albumName}}</p>
                    <p class="artistName">{{artistName}}</p>
                    </div>
                {{/each}}
                </div>
            </div>

        </div>
    {{/inline}}
{{/layout}}