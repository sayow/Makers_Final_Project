{{#> layout}}
    {{#*inline "content"}}
        <div class="wrapper">
                <div id = "profileCard">
                    <img id="profilePicture" src="{{currentUser.profilePicture}}" alt="...">
                </div>
                 <div id="liked-albums">
                     {{#each likedAlbums}}
                         <div class="album">
                             <img src="{{imageUrl}}" alt="Album's photo"/>
                             <p>{{artistName}}</p>
                             <p>{{albumName}}</p>
                         </div>
                     {{/each}}
                 </div>
            <div class="friendsList">
                <h2>Following</h2>
                {{#each followedUsers}}
                    <div class="followedUsers">
                        <img class="profile_picture" src="{{profilePicture}}">
                        <p class="username"> {{username}}</p>
                        <p class="email">{{email}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    {{/inline}}
{{/layout}}